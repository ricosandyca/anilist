{
  "version": 2,
  "name": "anilist",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/[^.]+", "dest": "client/index.html" },
    { "src": "/(.*)", "dest": "client/$1" }
  ]
}
